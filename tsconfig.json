{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src", 
      "resolveJsonModule": true // Enable JSON module resolution
    },
    "include": ["./src/client.ts"], 
    "exclude": ["./node_modules"]
}